{
  "expo": {
    "name": "TextScan AI",
    "slug": "textscanai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/shared/assets/img/icon.png",
    "scheme": "textscanai",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/icon.png",
      "backgroundColor": "#ffffff"
    },

    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.hryachkov.textscanai",
      "permissions": ["INTERNET"],
      "usesCleartextTraffic": true
    },
    "web": {
      "output": "static",
      "favicon": "./src/shared/assets/img/icon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/shared/assets/img/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#ffffff"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Разрешить доступ к камере для съемки фото",
          "microphonePermission": "Разрешить доступ к микрофону для записи видео"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Приложению нужен доступ к вашим фото",
          "cameraPermission": "Приложению нужен доступ к камере"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
